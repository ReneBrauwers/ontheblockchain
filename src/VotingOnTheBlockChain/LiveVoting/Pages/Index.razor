}
else
{
    <div class="album py-5 bg-light">
        <div class="container">
            @if (_lastVotings is not null && _lastVotings.Count > 0)
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var voting in _lastVotings)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="100" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>@voting.ProjectName</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">@voting.ProjectName</text></svg>
                                <div class="card-body">
                                    <h6 class="card-title">@voting.VotingName</h6>
                                    <p class="card-text">


                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <HxButtonGroup>
                                            <HxButton Text="Results" Color="ThemeColor.Info" OnClick="@(()=>GetResults(voting))" />

                                            <HxDropdownButtonGroup>
                                                <HxDropdownToggleButton Color="ThemeColor.Dark">Cast vote</HxDropdownToggleButton>
                                                <HxDropdownMenu>

                                                    @foreach (var voteoption in voting.VotingOptions)
                                                    {

                                                        <HxDropdownItem OnClick="@(()=>CastVote(voting,voteoption))" Enabled="@((@voting.IsLive))">@voteoption</HxDropdownItem>

                                                    }


                                                </HxDropdownMenu>
                                            </HxDropdownButtonGroup>
                                        </HxButtonGroup>

                                        @if (voting.IsLive)
                                        {
                                            <small class="text-muted">
                                                LIVE&nbsp;
                                                <span style="display: inline-block; margin-right: 0.5rem;" class="float-end">
                                                    <HxSpinner Size="SpinnerSize.Small" Type="SpinnerType.Grow" Color="ThemeColor.Danger" />
                                                </span>
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">
                                                voting ended

                                            </small>
                                        }



                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>




            }
        </div>
    </div>



}


@code {

    private List<ProjectConfig>? _projectsConfig { get; set; } //= new List<ProjectConfig>();
    private List<VotingRegistrations> _lastVotings { get; set; } = new();
    private ProjectConfig _selectedProjectConfig { get; set; } = new();
    public bool _latestVotingFetched = false;
    protected override async Task OnInitializedAsync()
    {
        _projectsConfig = new();
        await _configManager.ClearLocalStore();
        _projectsConfig = await _configManager.GetProjectsConfig();
        if (_projectsConfig.Count > 0)
        {
            if (await GetVotings())
            {
                await InvokeAsync(StateHasChanged);
            }
        }

        _latestVotingFetched = true;

    }



    private async Task<bool> GetVotings()
    {
        if (_lastVotings is not null && _lastVotings.Count > 0)
        {
            return true;
        }

        bool isSuccess = false;
        try
        {
            foreach (var project in _projectsConfig)
            {
                CancellationTokenSource ctx = new CancellationTokenSource(new TimeSpan(0, 0, 20)); //20 seconds
                var result = await _votignManager.GetLastVoting(project, ctx);
                if (result is not null && result?.VotingOptions?.Count() > 0)
                {
                    _lastVotings.Add(result);
                }
            }

        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }


        return isSuccess;
    }

    private async Task CastVote(VotingRegistrations voteInfo, string votedOn)
    {
        var votingId = voteInfo.VotingId;
        var voteCastOn = votedOn.StringToHex();
        var destination = voteInfo.VotingAccount;
        var votingEndpoint = $"https://xrpl-voting-ledgernano.azurewebsites.net?id={votingId}&vote={voteCastOn}&dest={destination}";
        await JS.InvokeVoidAsync("redirectExternal", votingEndpoint, "_blank");
    }

    private void GetResults(VotingRegistrations voteInfo)
    {
        var redirectPage = (voteInfo.IsLive ? "/liveresult" : "/lastresult");
        var queryParams = $"si={voteInfo.VotingStartIndex}&va={voteInfo.VotingAccount}&vca={voteInfo.VotingControllerAccount}&id={voteInfo.VotingId}&ei={voteInfo.VotingEndIndex}&pn={voteInfo.ProjectName}&pt={voteInfo.ProjectToken}";
        _navManager.NavigateTo($"{redirectPage}?{queryParams}");
    }
}